  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.2.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "gsap": "^3.12.5",
    "pixi.js": "^8.5.0"
  }
