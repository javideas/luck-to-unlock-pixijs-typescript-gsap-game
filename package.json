{
  "name": "luck-to-unlock-pixijs-typescript-gsap-game",
  "homepage": "https://javideas.github.io/luck-to-unlock-pixijs-typescript-gsap-game/",
  "version": "1.0.0",
  "description": "A mini game where players unlock a vault to reveal a treasure by entering a secret combination. Features include interactive gameplay, animations, and error handling. Implemented using PixiJS, TypeScript, and GSAP.",
  "scripts": {
    "dev": "vite",                             // For local development
    "build": "vite build",                     // For standard production build
    "build:github": "NODE_ENV=github vite build --mode github", // For GitHub Pages deployment
    "serve": "vite preview",                   // For previewing production build locally
    "deploy": "gh-pages -d dist",              // To deploy to GitHub Pages
    "clean": "rimraf ./dist"                   // To clean the output folder
  },
  "keywords": [
    "mini-game",
    "vault",
    "treasure",
    "PixiJS",
    "TypeScript",
    "GSAP",
    "interactive",
    "animations"
  ],
  "author": "Javier Moreno",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.2.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  },
  "dependencies": {
    "gsap": "^3.12.5",
    "pixi.js": "^8.5.0"
  }
}
